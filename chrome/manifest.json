{
    "manifest_version": 2,

    "name": "Open in Qube",
    "version": "2.1",
    "description": "It handles which VM is responsibile to open URLs. You can choose between DVM, a default VM and this VM. Furthermore through context menu entries you can open specific URL in a custom way.",

    "update_url": "https://raffaeleflorio.github.io/resources/we-updates-manifest/chrome.xml",

    "icons": {
	"48": "common/qubes-logo.png"
    },
    
    "author": "Raffaele Florio",
    "homepage_url": "https://github.com/raffaeleflorio/qubes-url-redirector",

    "options_ui": {
	"page": "common/options/settings.html",
	"chrome_style": true,
	"open_in_tab": true
    },

    "browser_action": {
	"chrome_style": true,
	"default_title": "Open in Qube settings",
	"default_icon": "common/qubes-logo.png"
    },

    "background": {
	"scripts": [
	    "webextension-browser-proxy/polyfill.js",
	    "common/backgrounds/anti_rdr.js",
	    "common/backgrounds/whitelist.js",
	    "common/backgrounds/settings.js",
	    "common/backgrounds/native.js",
	    "common/backgrounds/ui.js",
	    "common/backgrounds/redirector.js",
	    "common/backgrounds/qur.js"
	]
    },
    
    "content_scripts": [{
	"js": [
//	    "webextension-browser-proxy/polyfill.js",
	    "content_scripts/aHandler.js"
	],
	"matches": ["<all_urls>"],
	"run_at": "document_end"
    }],

    "permissions": [
	"contextMenus",
	"storage",
	"nativeMessaging",
	"webRequest",
	"webRequestBlocking",
	"tabs",
	"<all_urls>"
    ]    
}
