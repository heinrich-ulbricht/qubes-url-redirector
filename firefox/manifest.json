{
    "manifest_version": 2,

    "name": "Open in Qube",
    "version": "2.1",
    "applications": {
	"gecko": {
	    "id": "qubes-url-redirector@raffaeleflorio.github.io"
	}
    },
    "description": "Redirect untrusted URLs to other VM while you surf the web!",

    "icons": {
	"16": "common/logo.png",
	"32": "common/logo.png",
	"48": "common/logo.png",
	"64": "common/logo.png",
	"128": "common/logo.png"
    },
    
    "author": "Raffaele Florio",
    "homepage_url": "https://github.com/raffaeleflorio/qubes-url-redirector",

    // "options_ui": {
    // 	"page": "common/options/settings.html",
    // 	"browser_style": true
    // },

    "browser_action": {
	"browser_style": true,
	"default_title": "Open in Qube settings",
	"default_icon": "common/logo.png"
    },

    "background": {
	"scripts": [
	    "common/js/backend/main.js",
	    "common/js/backend/core/settings.js",
	    "common/js/backend/core/whitelist_entries.js",
	    "common/js/backend/core/whitelist.js",
	    "common/js/backend/JSONPersistence.js"
	]
    },
    
    "permissions": [
	"contextMenus",
	"storage",
	"nativeMessaging",
	"webRequest",
	"webRequestBlocking",
	"tabs",
	"<all_urls>"
    ]    
}
