{
    "manifest_version": 2,

    "name": "Open in Qube",
    "version": "2.1",

    "description": "Redirect untrusted URLs to other VM while you surf the web!",

    "icons": {
	"16": "common/logo.png",
	"32": "common/logo.png",
	"48": "common/logo.png",
	"64": "common/logo.png",
	"128": "common/logo.png"
    },
    
    "author": "Raffaele Florio",
    "homepage_url": "https://github.com/raffaeleflorio/qubes-url-redirector",

    "options_ui": {
	"page": "common/html/settings.html",
	"chrome_style": true,
	"open_in_tab": true
    },

    "browser_action": {
	"chrome_style": true,
	"default_title": "Open in Qube settings",
	"default_icon": "common/logo.png"
    },

    "background": {
	"scripts": [
	    "webextension-browser-proxy/polyfill.js",
	    "common/js/backend/main.js",
	    "common/js/backend/tabs.js",

	    "common/js/backend/core/settings.js",
	    "common/js/backend/core/whitelist_entries.js",
	    "common/js/backend/core/whitelist.js",
	    "common/js/backend/core/native.js",

	    "common/js/backend/messaging/messaging.js",
	    "common/js/backend/messaging/settingsML.js",
	    "common/js/backend/messaging/whitelistML.js",

	    "common/js/backend/http/req_handler.js",

	    "common/js/backend/menu.js"
	]
    },
    
    // "content_scripts": [{
    // 	"js": [
    // 	    "content_scripts/aHandler.js"
    // 	],
    // 	"matches": ["<all_urls>"],
    // 	"run_at": "document_end"
    // }],

    "permissions": [
	"contextMenus",
	"storage",
	"nativeMessaging",
	"webRequest",
	"webRequestBlocking",
	"tabs",
	"<all_urls>"
    ]    
}
