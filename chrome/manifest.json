{
    "manifest_version": 2,

    "name": "Open in Qube",
    "version": "2.1",

    "icons": {
	"48": "qubes-logo.png"
    },
    
    "author": "Raffaele Florio",
    "homepage_url": "https://github.com/raffaeleflorio/qubes-url-redirector",

    "options_ui": {
	"page": "options/settings.html",
	"chrome_style": true,
	"open_in_tab": true
    },

    "browser_action": {
	"chrome_style": true,
	"default_title": "Open in Qube settings",
	"default_icon": "qubes-logo.png"
    },

    "background": {
	"scripts": [
	    "webextension-browser-proxy/polyfill.js",
	    "backgrounds/anti_rdr.js",
	    "backgrounds/whitelist.js",
	    "backgrounds/settings.js",
	    "backgrounds/native.js",
	    "backgrounds/ui.js",
	    "backgrounds/redirector.js",
	    "backgrounds/qur.js"
	]
    },
    
    "content_scripts": [{
	"js": [
//	    "webextension-browser-proxy/polyfill.js",
	    "content_scripts/aHandler.js"
	],
	"matches": ["<all_urls>"],
	"run_at": "document_end"
    }],

    "permissions": [
	"contextMenus",
	"storage",
	"nativeMessaging",
	"webRequest",
	"webRequestBlocking",
	"tabs",
	"<all_urls>"
    ]    
}
